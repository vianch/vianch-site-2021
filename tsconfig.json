{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "es2015", "es2017"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/templates/*": ["templates/*"],
      "@/models/*": ["models/*"],
      "@/utils/*": ["services/*"],
      "@/lib/*": ["lib/*"],
      "@/services/*": ["services/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./types", "node_modules/@types"],
    "types": ["node"],
    "isolatedModules": true,
    "inlineSourceMap": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "./types/**/*",
    "**/*.ts",
    "**/*.tsx",
    "./src/**/*"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
